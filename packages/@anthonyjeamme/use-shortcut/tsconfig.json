{
  "extends": "@repo/typescript-config/react-library.js",
  "compilerOptions": {
    "lib": ["es2019", "dom"],
    "outDir": "./dist",
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
